<%- include("partials/header") -%>

<%- include("partials/navbar") -%>

  <div class="container">
    <h1 id="heading">Contact</h1>
  </div>

  <div class="container">
    <h5 class="contactMessage"><%= contactMessage %></h5>
    <div class="card-body">
      <form action="/contact" method="post">
        <label for="userName">Enter your name: </label>
        <input type="text" id="userName" name="userName" autocomplete="off">
        <label for="userMail"> Enter your e-Mail: </label>
        <input type="email" id="userMail" name="userMail" placeholder="(optional)" autocomplete="off">
        <textarea name="message" rows="8" cols="80" placeholder="Enter your message"></textarea>
        <button class="btn btn-primary taskButton" type="submit" name="sendMessage">Send</button>
      </form>
    </div>
  </div>

<%- include("partials/footer") -%>
